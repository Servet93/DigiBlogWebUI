@model CategoryItem
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@if (Model.Children != null && Model.Children.Any())
{
    <li class="nav-item dropdown dropdown-submenu"><a class="dropdown-item" href="@Url.Action("Index", new { catId = @Model.Id })">@Model.Name</a>
        <ul class="dropdown-menu">
            @foreach (var category in Model.Children)
            {
                @Html.Partial("_MenuPartial", category)
            }
        </ul>
    </li>
    
}
else
{

    <li><a class="dropdown-item" href="@Url.Action("Index", new { catId = @Model.Id })">@Model.Name</a></li>

}


