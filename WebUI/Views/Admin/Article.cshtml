@model ArticleEditViewModel
@{
    ViewData["Title"] = "Article";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Makale</h1>

<form enctype="multipart/form-data" asp-controller="Admin" asp-action="CreateArticle" method="post">
    <input hidden asp-for="Id"/>
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label">Başlık</label>
        <div class="col-sm-10">
            <input asp-for="Title" type="text" class="form-control" placeholder="Başlık">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="TitleImage" class="col-sm-2 col-form-label">Makale Görseli</label>
        </div>
        <div class="col-sm-10">
            <label asp-for="TitleImage" class="custom-file-label">Choose file</label>
            <input asp-for="TitleImage" type="file" class="custom-file-input">
        </div>
        </div>
    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="Categories" class="col-sm-2 col-form-label">Kategoriler</label>
        </div>
        <div class="col-sm-10">
            <select name="Categories[]"
                    id="select2"
                    multiple="multiple"
                    class="form-control "
                    asp-items="ViewBag.Categories"></select>
        </div>
    </div>
        <div class="form-group row">
            <label asp-for="Summary" class="col-sm-2 col-form-label">Özet</label>
            <div class="col-sm-10">
                <textarea asp-for="Summary" class="form-control"></textarea>
            </div>
        </div>
        <textarea asp-for="Body"></textarea>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </div>
</form>

@section Scripts{
    <script>
        $(document).ready(function () {
            //select2 eklentimizin tanımı
            $('#select2').select2();
            $('#Body').summernote({
                height: 500
            });
        });
    </script>
}


